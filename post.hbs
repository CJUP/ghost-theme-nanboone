{{!< default}}

{{#post}}

<main class="site-main">
    <article
        class="post-full {{post_class}} {{#has tag='#noimg'}}no-image{{else}}{{#unless feature_image}}no-image{{/unless}}{{/has}}">
        <div class="post-full-header">
            {{#if feature_image}}
            <div class="post-full-cover" style="background-image: url({{feature_image}})">
            </div>
            {{else}}
            <div class="post-full-cover" style="background-image: url({{asset "img/placeholder.jpg"}})">
            </div>
            {{/if}}
            <div class="post-full-text">
                <div class="post-full-meta">
                    <time class="post-full-meta-date"
                        datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY, MMM Do"}}</time>
                </div>
                <h1 class="post-full-title">{{title}}</h1>
                {{#foreach tags}}
                <span class="post-item-tag tag-{{slug}}"><a href="{{url}}">{{name}}</a></span>
                {{/foreach}}
            </div>
        </div>
    </article>

    <div class="inner-wide">
        <section class="post-full-content">
            {{content}}
        </section>
        {{!-- post footer --}}
        {{> post-footer}}
        {{> comments}}
    </div>
</main>

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}

{{/contentFor}}

{{/post}}